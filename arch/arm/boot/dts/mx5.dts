/* SDCARD & NAND devices enabled eMMC & Wi-FI disabled.*/
/* #define WIFI */
/* #define EMMC */
#define  NAND
#include "imx6ul-var-dart.dtsi"

&lcdif {
        status = "disabled";
};

//Soup up the I2C interface to the XMEGA to 1MHz
&i2c1 {
        clock-frequency = <1000000>;
        pinctrl-names = "default";
        pinctrl-0 = <&pinctrl_i2c1>;
        status = "okay";
};

&iomuxc {
        imx6ul-evk {
                pinctrl_uart7: uart7grp {
                        fsl,pins = <
                                MX6UL_PAD_LCD_DATA16__UART7_DCE_TX      0x1b0b1
                                MX6UL_PAD_LCD_DATA17__UART7_DCE_RX      0x1b0b1
                        >;
                };

                /* UART to RS485 */
                pinctrl_uart4: uart4grp {       /* RX/TX RTS/CTS */
                        fsl,pins = <
                                MX6UL_PAD_LCD_CLK__UART4_DCE_TX         0x1b0b1
                                MX6UL_PAD_LCD_ENABLE__UART4_DCE_RX      0x1b0b1
                                MX6UL_PAD_LCD_HSYNC__UART4_DCE_CTS      0x1b0b1
                                MX6UL_PAD_LCD_VSYNC__UART4_DCE_RTS      0x1b0b1
                        >;
                };
        };
};

/* UART to 2nd 485 interface */
&uart4 {
        pinctrl-names = "default";
        pinctrl-0 = <&pinctrl_uart4>;
        fsl,uart-has-rtscts;
        status = "okay";
};

/* UART to xMEGA */
&uart7 {
        pinctrl-names = "default";
        pinctrl-0 = <&pinctrl_uart7>;
        fsl;
        status = "okay";
};

&flexcan1 {
        status = "disabled";
};

&flexcan2 {
        status = "disabled";
};

&lcdif {
        status = "disabled";
};

&pwm1 {
        status = "disabled";
};

&pxp {
        status = "disabled";
};

&sai2 {
        status = "disabled";
};


